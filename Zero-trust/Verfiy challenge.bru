meta {
  name: Verfiy challenge
  type: http
  seq: 3
}

post {
  url: http://localhost:8080/auth/verify
  body: json
  auth: inherit
}

body:json {
  {
    "challenge_id": "{{CHALLENGE_ID}}",
    "signature": "{{SIGNATURE}}"
  }
}

script:post-response {
  bru.setEnvVar("ACCESS_TOKEN", res.body.access_token)
}

settings {
  encodeUrl: true
  timeout: 0
}
